{
  "name": "maestro-cli",
  "version": "1.0.0",
  "description": "Multi-Agent orchestration CLI for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "maestro": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli/index.js",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist",
    "reinstall": "./scripts/reinstall.sh",
    "reinstall:full": "./scripts/reinstall.sh -f -l",
    "reinstall:link": "./scripts/reinstall.sh -l",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "claude",
    "agent",
    "orchestration",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "execa": "^9.3.0",
    "ink": "^5.0.1",
    "lowdb": "^7.0.1",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "simple-git": "^3.25.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.3.2",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
}
